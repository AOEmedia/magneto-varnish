<config>
    <sections>
        <varnish translate="label" module="varnish">
            <label>Varnish Options</label>
            <tab>general</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>

            <groups>
                <options translate="label">
                    <label>Varnish options</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <enable_tracking_debug>
                            <label>Enable Tracking Debug</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Please do not enable on production environment. If this is set to YES, it will print informationt to identify inserted tracking code into store pages.</comment>
                        </enable_tracking_debug>
                    </fields>
                </options>
            </groups>
        </varnish>
    </sections>
</config>

